{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "../../dist-electron",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}